<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Principal_activity"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:showIn="@layout/activity_principal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout

        android:id="@+id/showRecepies"
        android:background="@drawable/linearlayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="onClick">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/prescription"
            />

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/TextViewFarmacopGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis recetas"
            android:textSize="28dp"
            android:id="@+id/txtshowRec" />


    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="2dp"
                android:background="@color/colorLight" />

    <LinearLayout
        android:id="@+id/showcontrol"
        android:background="@drawable/linearlayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:onClick="onClick">

        <TextView
            android:layout_marginRight="10dp"
            style="@style/TextViewFarmacopGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario de T.to"
            android:textSize="28dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtmytakes" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/control"
            />


    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="2dp"
                android:background="@color/colorLight" />

    <LinearLayout
        android:id="@+id/showprofile"
        android:background="@drawable/linearlayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="onClick">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/perfil"
            />

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/TextViewFarmacopGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="28dp"
            android:id="@+id/txtshowmessages" />


    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="2dp"
                android:background="@color/colorLight" />

    <LinearLayout
        android:id="@+id/showmessages"
        android:background="@drawable/linearlayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:onClick="onClick">

        <TextView
            android:layout_marginRight="10dp"
            style="@style/TextViewFarmacopGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensajes"
            android:textSize="28dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtprofile" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/message"
            />

    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="2dp"
                android:background="@color/colorLight" />

    <LinearLayout
        android:id="@+id/exit"
        android:background="@drawable/linearlayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="onClick">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/exit"
            />

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/TextViewFarmacopGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textSize="28dp"
            android:id="@+id/txtexit" />

    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="2dp"
                android:background="@color/colorLight" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
